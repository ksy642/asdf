<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerCreate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AkboActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_menu_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="녹음"
                    android:onClick="onRecord"/>
                <Button
                    android:id="@+id/bt_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재생"
                    android:layout_marginRight="240dp"
                    android:onClick="onPlay"/>

                <Button
                    android:id="@+id/bt_akbo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="악보 1" />

                <Button
                    android:id="@+id/bt_akbo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="악보 2"/>

                <Button
                    android:id="@+id/bt_akbo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="악보 3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_example3" />

        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/drawer_activity"/>

</androidx.drawerlayout.widget.DrawerLayout>